@model IEnumerable<RiderQc.Web.ViewModels.User.UserViewModel>

@{
    ViewBag.Title = "UserManagement";
}

<div class="col-sm-12 col-lg-12 col-md-12">

    <div class="row">
        <h2 class="page-header alert-dismissable">User Management</h2>
        <button class="btn-success btn" style="margin-bottom:1%;" onclick="location.href='@Url.Action("create", new { controller = "admin/user"})'"><i class="glyphicon glyphicon-plus-sign"></i> Create a User</button>
    </div>

    <table class="table-responsive table-striped table-bordered table table-hover">
        <tr>
            <th class="col-sm-2 col-lg-2 col-md-2 text-center">
                <i class="glyphicon glyphicon-user"></i>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th class="col-sm-3 col-lg-3 col-md-3 text-center">
                <i class="glyphicon glyphicon-info-sign"></i>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-sm-3 col-lg-3 col-md-3 text-center">
                <i class="glyphicon glyphicon-registration-mark"></i>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th class="col-sm-4 col-lg-4 col-md-4 text-center">
                <i class="glyphicon glyphicon-cog"></i>
                Options
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td class="text-center">
                    <button class="btn-primary btn" onclick="location.href='@Url.Action("edit", new { controller = "admin/user", id = item.UserID })'"><i class="glyphicon glyphicon-edit"></i> Edit</button>
                    <button class="btn-info btn" onclick="location.href='@Url.Action("detail", new { controller = "admin/user", id = item.UserID })'"><i class="glyphicon glyphicon-book"></i> Details</button>
                    <button class="btn-danger btn" onclick="location.href='@Url.Action("delete", new { controller = "admin/user", id = item.Username })'"><i class="glyphicon glyphicon-remove"></i> Delete</button>
                </td>
            </tr>
        }
    </table>
</div>
